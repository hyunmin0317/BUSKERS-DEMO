<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.buskers">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.example.buskers.MasterApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        android:usesCleartextTraffic="true">
        <activity android:name="com.example.buskers.IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.buskers.ChooseActivity" />
        <activity android:name="com.example.buskers.LoginActivity" />
        <activity android:name="com.example.buskers.SignupActivity" />
        <activity android:name="com.example.buskers.ListActivity" />
        <activity android:name="com.example.buskers.MyListActivity" />
        <activity android:name="com.example.buskers.UploadActivity" />
        <activity android:name="com.example.buskers.UserInfo" />
    </application>

</manifest>